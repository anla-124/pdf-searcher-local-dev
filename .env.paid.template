# =============================================================================
# PDF SEARCHER - PAID TIER TEMPLATE
# =============================================================================
# This template is for deploying with managed Supabase (cloud) and paid-tier
# services from Qdrant Cloud, Google Cloud, and Draftable for higher performance.
#
# To use this configuration:
# 1. Copy this file to .env.local
# 2. Fill in all credential placeholders with your service credentials
# 3. Deploy to Vercel or your hosting platform
# =============================================================================

# =============================================================================
# SUPABASE CONFIGURATION (Managed Cloud Instance)
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =============================================================================
# GOOGLE CLOUD DOCUMENT AI CONFIGURATION
# =============================================================================
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_LOCATION=us
GOOGLE_CLOUD_PROCESSOR_ID=your_primary_processor_id
GOOGLE_CLOUD_OCR_PROCESSOR_ID=your_ocr_processor_id
GOOGLE_APPLICATION_CREDENTIALS=./credentials/google-service-account.json

# =============================================================================
# QDRANT VECTOR DATABASE CONFIGURATION
# =============================================================================
# For production, use Qdrant Cloud or self-hosted instance
QDRANT_URL=https://your-cluster.qdrant.cloud
QDRANT_API_KEY=your_qdrant_cloud_api_key_here
QDRANT_COLLECTION_NAME=documents

# =============================================================================
# DRAFTABLE COMPARISON API CONFIGURATION
# =============================================================================
NEXT_PUBLIC_DRAFTABLE_ACCOUNT_ID=your_draftable_account_id
DRAFTABLE_AUTH_TOKEN=your_draftable_auth_token
NEXT_PUBLIC_DRAFTABLE_API_URL=https://api.draftable.com/v1

# =============================================================================
# CRON & BACKGROUND JOBS
# =============================================================================
CRON_SECRET=generate_a_secure_random_string_here

# =============================================================================
# DATABASE CONNECTION POOL
# =============================================================================
DB_POOL_MIN_CONNECTIONS=20
DB_POOL_MAX_CONNECTIONS=200
DB_POOL_IDLE_TIMEOUT=300000
DB_POOL_CONNECTION_TIMEOUT=30000

# =============================================================================
# RATE LIMITING & PROCESSING
# =============================================================================
UNLIMITED_PROCESSING=false
# Note: Set UNLIMITED_PROCESSING=true only if your Supabase plan supports higher limits
UPLOAD_GLOBAL_LIMIT=5
UPLOAD_PER_USER_LIMIT=5
DELETE_GLOBAL_LIMIT=5
DELETE_PER_USER_LIMIT=5
QDRANT_DELETE_MAX_RETRIES=5
QDRANT_DELETE_BACKOFF_MS=2000
MAX_CONCURRENT_DOCUMENTS=10
MAX_CONCURRENT_CHUNKS_PER_DOC=50
LARGE_DOCUMENT_THRESHOLD_MB=10

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================
MAX_CHUNK_CHARACTERS=1000
SIMILARITY_STAGE2_WORKERS=8
DUMP_DOCUMENT_AI=0

# =============================================================================
# LOGGING
# =============================================================================
VERBOSE_LOGS=true
